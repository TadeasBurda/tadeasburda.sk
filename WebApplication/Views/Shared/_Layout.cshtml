@{
    ViewData["title"] = "Vitajte na mojej webovej stránke ";
    ViewData["description"] = "Tadeáš Burda osobná webstránka. Moje portfólio, blog, Petriho miska, atď.";
    ViewData["url"] = "https://tadeasburda.sk" + Context.Request.Path;
    ViewData["og:type"] = "website";
    ViewData["og:image"] = "https://tadeasburda.sk/share-img.webp";
}
<!DOCTYPE html>
<html style="font-size:16px;font-family:'Times New Roman', Times, serif" lang="sk">
<head>
    @* Global site tag (gtag.js) - Google Analytics *@
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-150342827-2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-150342827-2');
    </script>
    @* main *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["title"]</title>
    <meta name="description" content="@ViewData["description"]" />
    <link rel="canonical" href="@ViewData["url"]" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="manifest" href="~/manifest.webmanifest" />
    @* facebook *@
    <meta property="og:url" content="@ViewData["url"]" />
    <meta property="og:type" content="@ViewData["og:type"]" />
    <meta property="og:title" content="@ViewData["title"]" />
    <meta property="og:image" content="@ViewData["og:image"]" />
    <meta property="og:description" content="@ViewData["description"]" />
    @* libs *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    @* my css *@
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    @* navbar *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mb-1">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Tadeáš Burda</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Domov</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Portfólio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Blog</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarTools" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Nástroje
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarTools">
                            <li><a class="dropdown-item disabled" href="#" tabindex="-1" aria-disabled="true">Konvertor obrázkov</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Kontakty</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Účet</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Hladať" aria-label="Hladať">
                    <button class="btn btn-outline-light" type="submit">Hladať</button>
                </form>
            </div>
        </div>
    </nav>
    @* web content *@
    <main>
        @RenderBody()
    </main>
    @* libs *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js" integrity="sha512-UdIMMlVx0HEynClOIFSyOrPggomfhBKJE28LKl8yR3ghkgugPnG6iLfRfHwushZl1MOPSY6TsuBDGPK2X4zYKg==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" integrity="sha512-EanukVTZc4W9tUCLnDl069Izidg49PcNRKO1upLzKt9ajq66i+bXOtlzXcIbRhb6vVEGF6BCc8wQi5T1ztCpTQ==" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    @* my scripts *@
    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @* render scripts *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
