@{
    ViewData["title"] = "Vitajte na mojej webovej stránke";
    ViewData["description"] = "Tadeáš Burda osobná webstránka. Moje portfólio, blog, Petriho miska, atď.";
    ViewData["url"] = "https://tadeasburda.sk" + Context.Request.Path;
    ViewData["og:type"] = "website";
    ViewData["og:image"] = "https://tadeasburda.sk/img/share-img.webp";
}
<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="utf-8" />
    @* Global site tag (gtag.js) - Google Analytics *@
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-150342827-2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-150342827-2');
    </script>
    @* main *@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["title"]</title>
    <meta name="description" content="@ViewData["description"]" />
    <link rel="canonical" href="@ViewData["url"]" />
    @* icons *@
    <link rel="shortcut icon" href="~/img/favicons/favicon.ico" type="image/x-icon" asp-append-version="true" />
    <link rel="icon" href="~/img/favicons/favicon-32w.png" sizes="32x32" asp-append-version="true" />
    <link rel="icon" href="~/img/favicons/favicon-48w.png" sizes="48x48" asp-append-version="true" />
    <link rel="icon" href="~/img/favicons/favicon-96w.png" sizes="96x96" asp-append-version="true" />
    <link rel="icon" href="~/img/favicons/favicon-144w.png" sizes="144x144" asp-append-version="true" />
    <link rel="icon" href="~/img/favicons/favicon-192w.png" sizes="192x192" asp-append-version="true" />
    @* facebook *@
    <meta property="og:url" content="@ViewData["url"]" />
    <meta property="og:type" content="@ViewData["og:type"]" />
    <meta property="og:title" content="@ViewData["title"]" />
    <meta property="og:image" content="@ViewData["og:image"]" />
    <meta property="og:description" content="@ViewData["description"]" />
    @* my css *@
    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" asp-append-version="true" />
        <link type="text/css" rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link type="text/css" rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link type="text/css" rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" asp-append-version="true" />
        <link type="text/css" rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link type="text/css" rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <partial name="_CookieConsentPartial" />

    <partial name="_LayoutPartial/_NavBar" />

    <partial name="_LayoutPartial/_FlashMessages" />

    <main>
        @RenderBody()
    </main>

    <partial name="_LayoutPartial/_Footer" />

    <environment include="Development">
        <script type="text/javascript" src="~/lib/twitter-bootstrap/js/bootstrap.js" asp-append-version="true"></script>
        <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/lib/twitter-bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>
        <script type="text/javascript" src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @* render scripts *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
