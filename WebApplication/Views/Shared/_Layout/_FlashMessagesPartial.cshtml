<section>
    @foreach (var item in ViewContext.TempData.DeserializeToObject<List<FlashMessage>>("Messages"))
    {
        <div class="@($"alert alert-{item.Type.ToString().ToLower()} alert-dismissible fade show mx-1")" role="alert">
            @item.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</section>
