@model ImagesConvertorViewModel

<section class="mb-5">
    <h2>3. Konvertor</h2>

    <form class="row justify-content-center" enctype="multipart/form-data" method="post" asp-action="ImagesConvertor">
        <div class="col-12 col-md-8 col-lg-6">
            @* width inputs *@
            <div class="mb-3">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">
                                <label asp-for="Widths"></label>
                            </th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Widths.Count; i++)
                        {
                            <tr>
                                <th scope="row">@(i + 1)</th>
                                <td>
                                    <input class="form-control" asp-for="Widths[i]" />
                                    <span class="form-text text-danger" asp-validation-for="Widths[i]"></span>
                                </td>
                                <td>
                                    <button class="btn btn-primary btn-sm mx-1" type="button" onclick="addRow(this)">
                                        <i class="bi bi-arrows-expand"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @*output formats*@
            <div class="mb-3">
                <div class="d-flex justify-content-evenly">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" asp-for="OutputWeb" />
                        <label class="form-check-label" asp-for="OutputWeb">WebP</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" asp-for="OutputJpeg" />
                        <label class="form-check-label" asp-for="OutputJpeg">Jpeg</label>
                    </div>
                </div>
                <p class="text-muted">
                    <small><em>Prehliadač Safari nepodporuje formát WebP...</em></small>
                </p>
            </div>

            @* upload file *@
            <div class="mb-3">
                <input class="form-control" asp-for="UploadFiles" />
                <span class="form-text text-danger" asp-validation-for="UploadFiles"></span>
            </div>

            @* download *@
            <div class="text-center">
                <button class="btn btn-success" type="submit">
                    <i class="bi bi-cloud-arrow-down-fill"></i> Stiahnuť
                </button>
            </div>
        </div>
    </form>
</section>
